<% if model.errors.any? %>
	<div class="alert alert-danger">
		<p class="h6">
			<%= t("views.shared.error_messages.form_has") %>
			<%= t("views.shared.error_messages.errors",
								 count: model.errors.count) %>
		</p>
		<ul>
			<% model.errors.full_messages.each do |message| %>
				<li>
					<%= message %>
				</li>
			<% end %>
		</ul>
	</div>
<% end %>
