<span class="me-3">
  <% if subscription.user.present? %>
    <span><%= render partial: "users/user", locals: { user: subscription.user } %></span>
  <% else %>
    <span><%= subscription.user_name %></span>
  <% end %>
  <% if current_user_can_edit?(subscription) %>
    <%= button_to bi_icon("x"), game_subscription_path(subscription.game, subscription),
                  method: :delete, class: "btn p-0", form_class: "d-inline",
                  data: { turbo_confirm: t("views.deletion_confirm") }, title: t("views.delete") %>
  <% end %>
</span>
