<%= form_for([@game, subscription], builder: Polaris::FormBuilder, data: { turbo: false }) do |form| %>
  <%= polaris_form_layout do |form_layout| %>
    <% unless user_signed_in? %>
      <% form_layout.with_item do %>
        <%= form.polaris_text_field(:user_name) %>
      <% end %>
      <% form_layout.with_item do %>
        <%= form.polaris_text_field(:user_email, type: :email) %>
      <% end %>
      <% form_layout.with_item do %>
        <%= recaptcha_tags %>
      <% end %>
    <% end %>

    <% form_layout.with_item do %>
      <%= polaris_button(submit: true, primary: true) { t("views.subscriptions.form.subscribe") } %>
    <% end %>
  <% end %>
<% end %>
