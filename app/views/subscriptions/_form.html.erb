<%= render "shared/error_messages", model: subscription %>
<div class="row">
  <div class="col-sm-4">
    <%= form_for([@game, subscription], data: { turbo: false }) do |f| %>
      <% unless user_signed_in? %>
        <div class="mb-3">
          <%= f.label :user_name, class: "form-label mb-0" %>
          <%= f.text_field :user_name, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :user_email, class: "form-label mb-0" %>
          <%= f.text_field :user_email, class: "form-control" %>
        </div>

        <div class="mb-3"><%= recaptcha_tags %></div>
      <% end %>

      <%= f.submit t("views.subscriptions.form.subscribe"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
