<%= form_for([@game, photo],
             builder: Polaris::FormBuilder,
             data: { turbo: false },
             html: { multipart: true }) do |form| %>
  <%= polaris_form_layout do |form_layout| %>
    <% form_layout.with_item do %>
      <%= form.polaris_dropzone(:photo, multiple: false) %>
    <% end %>
    <% form_layout.with_item do %>
      <%= polaris_button(submit: true, primary: true) { t("views.send") } %>
    <% end %>
  <% end %>
<% end %>
