<%= render partial: "users/user", locals: { user: photo.user } %>
<% if current_user_can_edit?(photo) %>
  <%= button_to bi_icon("trash"), game_photo_path(photo.game, photo),
                method: :delete, class: "btn text-danger p-0", form_class: "d-inline",
                data: { turbo_confirm: t("views.deletion_confirm") }, title: t("views.delete") %>
<% end %>
