<%= polaris_card(title: comment.user_name) do |card| %>
  <% card.with_section do %>
    <p><%= comment.body %></p>
    <%= polaris_stack do |stack| %>
      <% stack.with_item(fill: true) do %>
        <%= polaris_text_style(variation: :subdued) { l comment.created_at, format: :long } %>
      <% end %>
      <% stack.with_item do %>
        <% if current_user_can_edit?(comment) %>
          <%= polaris_button_to(game_comment_path(comment.game, comment),
                                method: :delete,
                                data: { turbo_confirm: t("views.deletion_confirm") }) do |button| %>
            <% button.with_icon(name: "DeleteMinor") %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
