<%= form_for([@game, comment], builder: Polaris::FormBuilder, data: { turbo: false }) do |form| %>
  <%= polaris_form_layout do |form_layout| %>
    <% unless user_signed_in? %>
      <% form_layout.with_item do %>
        <%= form.polaris_text_field(:user_name) %>
      <% end %>
    <% end %>

    <% form_layout.with_item do %>
      <%= form.polaris_text_field(:body, multiline: true, rows: 4) %>
    <% end %>
    <% form_layout.with_item do %>
      <%= polaris_button(submit: true, primary: true) { t("views.submit") } %>
    <% end %>
  <% end %>
<% end %>
