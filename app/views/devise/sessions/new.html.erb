<div class="row justify-content-center">
  <div class="col-sm-6">
    <div class="card mb-3">
      <div class="card-header h5"><%= t("views.devise.sessions.title") %></div>

      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name),
                     data: { turbo: false }) do |f| %>
          <div class="mb-3">
            <%= f.label :email, class: "form-label mb-0 fw-bold" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="mb-1">
            <%= f.label :password, class: "form-label mb-0 fw-bold" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="mb-3">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit t("views.devise.sessions.submit"), class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
      <div class="card-footer">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
