<div class="row justify-content-center">
	<div class="col-sm-6">
		<div class="card mb-3">
			<div class="card-header h5"><%= t("views.edit") %></div>
			
			<div class="card-body">
				<%= render partial: "shared/error_messages", locals: { model: @user} %>
	
				<%= form_with model: @user, data: { turbo: false },
											html: { multipart: true } do |form| %>
					<div class="mb-3">
						<%= form.label :name, class: "form-label mb-0 fw-bold" %>
						<%= form.text_field :name, class: "form-control" %>
					</div>
					<div class="mb-3">
						<%= form.label :email, class: "form-label mb-0 fw-bold" %>
						<%= form.text_field :email, class: "form-control" %>
					</div>
					<div class="mb-3">
						<%= form.label :avatar, class: "form-label mb-0 fw-bold" %>
						<%= content_tag(:p, image_tag(@user.avatar.thumb.url)) if @user.avatar? %>
						<%= form.file_field :avatar %>
					</div>
					<div><%= form.submit t("views.submit"), class: "btn btn-primary" %></div>
				<% end %>
			</div>

			<div class="card-footer"> 
				<%= link_to t("views.devise.registrations.edit.change_password"), edit_user_registration_path %>
			</div>
		</div>
	</div>
</div>
