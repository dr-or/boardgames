<div class="row justify-content-center">
	<div class="col-sm-6">
		<div class="card mb-3">
			<div class="card-header h5">Edit your profile</div>
			
			<div class="card-body">
				<%= render partial: "partials/error_messages", locals: { model: @user} %>
	
				<%= form_with model: @user, data: { turbo: false } do |form| %>
					<div class="mb-3">
						<%= form.label :name, "Your name:", class: "form-label mb-0 fw-bold" %>
						<%= form.text_field :name, class: "form-control" %>
					</div>
					<div class="mb-3">
						<%= form.label :email, "Your email:", class: "form-label mb-0 fw-bold" %>
						<%= form.text_field :email, class: "form-control" %>
					</div>
					<div><%= form.submit "Submit", class: "btn btn-primary" %></div>
				<% end %>
			</div>

			<div class="card-footer"> 
				<%= link_to "Change password", edit_user_registration_path %>
			</div>
		</div>
	</div>
</div>
