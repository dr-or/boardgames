<div class="mb-3">
  <% if current_user %>
    <%= link_to t("views.games.index.new_game"), new_game_path(user_id: current_user), class: "btn btn-success" %>
  <% else %>
    <p class="text-secondary ps-2"><%= t("views.games.index.unauthenticated") %></p>
  <% end %>
</div>

<%= render partial: "partials/game_grid", locals: {games: @games} %>
