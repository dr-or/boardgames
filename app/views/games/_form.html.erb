<div class="row">
  <div class="col-md-8">
    <%= render partial: "shared/error_messages", locals: { model: game} %>

    <%= form_with model: game, data: { turbo: false } do |form| %>
      <%= form.hidden_field :user_id %>

      <div class="mt-3">
        <%= form.label :title, class: "form-label mb-0" %>
        <%= form.text_field :title, class: "form-control" %>
      </div>
      <div class="mt-3">
        <%= form.label :address, class: "form-label mb-0" %>
        <%= form.text_field :address, class: "form-control" %>
      </div>
      <div class="mt-3">
        <%= form.label :datetime, class: "form-label mb-0 me-3" %>
        <%= form.datetime_select :datetime, class: "form-control" %>
      </div>
      <div class="mt-3">
        <%= form.label :description, class: "form-label mb-0" %>
        <%= form.text_area :description, class: "form-control" %>
      </div>
      <div class="mt-3">
        <%= form.label :pincode, class: "form-label mb-0" %>
        <%= form.text_field :pincode, class: "form-control" %>
      </div>
      <div class="mt-4 mb-5"><%= form.submit t("views.submit"), class: "btn btn-primary" %></div>
    <% end %>
  </div>
</div>
